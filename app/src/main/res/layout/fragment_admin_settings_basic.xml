<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    tools:context="com.teamrm.teamrm.Fragment.AdminSettingsBasic"
    tools:paddingTop="25dp"
    >

    <View
        style="@style/Separator4dp"
        />

    <RelativeLayout
        android:id="@+id/defineFirm"
        style="@style/PrefRowBig"
        android:background="@color/listRow_alt"
        >

        <ImageView
            android:id="@+id/firmIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_logo_blue" />

        <TextView
            android:id="@+id/firmLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_toEndOf="@id/firmIcon"
            android:text="נתוני חברה"
            android:textColor="@color/textColor_primary"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        style="@style/Separator4dp"
        />

    <RelativeLayout
        android:id="@+id/defineTechnicians"
        style="@style/PrefRowBig"
        android:background="@color/listRow_alt"
        >

        <ImageView
            android:id="@+id/technicianIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_icon_tech" />

        <TextView
            android:id="@+id/technicianLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_toEndOf="@id/technicianIcon"
            android:text="הגדרת טכנאים"
            android:textColor="@color/textColor_primary"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        style="@style/Separator4dp"
        />

    <RelativeLayout
        android:id="@+id/defineProducts"
        style="@style/PrefRowBig"
        android:background="@color/listRow_alt"
        >

        <ImageView
            android:id="@+id/productIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_icon_product2" />

        <TextView
            android:id="@+id/productLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_toEndOf="@id/productIcon"
            android:text="הגדרת מוצרים"
            android:textColor="@color/textColor_primary"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        style="@style/Separator4dp"
        />

    <RelativeLayout
        android:id="@+id/defineCategoryA"
        style="@style/PrefRowBig"
        android:background="@color/listRow_alt"
        >

        <ImageView
            android:id="@+id/categoryAIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_icon_sivug" />

        <TextView
            android:id="@+id/categoryALabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_toEndOf="@id/categoryAIcon"
            android:text="הגדרת סיווג לקריאות"
            android:textColor="@color/textColor_primary"
            android:textSize="18sp" />

    </RelativeLayout>

    <View
        style="@style/Separator4dp"
        />

    <!--RelativeLayout
        android:id="@+id/defineCategoryB"
        style="@style/PrefRowBig"
        android:background="@color/listRow_alt"
        >

        <ImageView
            android:id="@+id/categoryBIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_icon_sivug" />

        <TextView
            android:id="@+id/categoryBLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_toEndOf="@id/categoryBIcon"
            android:text="הגדרת סיווג משני לקריאות"
            android:textColor="@color/textColor_primary"
            android:textSize="18sp" />

    </RelativeLayout>

    <View
        style="@style/Separator4dp"
        /-->

    <RelativeLayout
        android:id="@+id/defineRegion"
        style="@style/PrefRowBig"
        android:background="@color/listRow_alt"
        >

        <ImageView
            android:id="@+id/regionIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_icon_location" />

        <TextView
            android:id="@+id/regionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_toEndOf="@id/regionIcon"
            android:text="הגדרת אזורים"
            android:textColor="@color/textColor_primary"
            android:textSize="18sp" />

    </RelativeLayout>

    <View
        style="@style/Separator4dp"
        />
    <RelativeLayout
        android:id="@+id/defineWorkShift"
        style="@style/PrefRowBig"
        android:background="@color/listRow_alt"
        >

        <ImageView
            android:id="@+id/workShiftIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_shifts" />

        <TextView
            android:id="@+id/workShiftLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_toEndOf="@id/workShiftIcon"
            android:text="הגדרת משמרות"
            android:textColor="@color/textColor_primary"
            android:textSize="18sp" />

    </RelativeLayout>

    <View
        style="@style/Separator4dp"
        />

    <RelativeLayout
        android:id="@+id/appPrefs"
        style="@style/PrefRowBig"
        android:background="@color/listRow_alt"
        >

        <ImageView
            android:id="@+id/appPrefsIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_settings" />

        <TextView
            android:id="@+id/appPrefsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_toEndOf="@id/appPrefsIcon"
            android:text="תצורת האפליקציה"
            android:textColor="@color/textColor_primary"
            android:textSize="18sp" />

    </RelativeLayout>

    <View
        style="@style/Separator4dp"
        />

</LinearLayout>
