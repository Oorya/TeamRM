<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/userNameTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="שם משתמש"
        android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color" />

    <EditText
        android:id="@+id/userName"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userNameTitle"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/phonTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userName"
        android:text="מס' טלפון"
        android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color" />

    <EditText
        android:id="@+id/phone"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phonTitle"
        android:ems="10"
        android:inputType="textPersonName" />

</RelativeLayout>