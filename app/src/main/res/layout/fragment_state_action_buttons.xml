<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.teamrm.teamrm.Fragment.TicketView"
    android:layoutDirection="rtl"
    android:background="@android:color/transparent">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:layout_marginBottom="42dp"
    android:layout_marginStart="42dp"
    android:layout_marginEnd="42dp"
    android:background="@android:color/transparent"
    >
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="@dimen/card_button_radius_default"
        app:cardBackgroundColor="@color/status_ok"
        app:cardUseCompatPadding="true"
        >
    <Button
        style="@style/paddedBtn"
        android:text="אישור"
        android:drawableStart="@drawable/ic_icon_ok"
        android:drawablePadding="16dp"
        android:background="@android:color/transparent"
        android:id="@+id/btnRight"
        />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="@dimen/card_button_radius_default"
        app:cardBackgroundColor="@color/status_error"
        app:cardUseCompatPadding="true"
        >
    <Button
        style="@style/paddedBtn"
        android:text="דחיה"
        android:drawableStart="@drawable/ic_icon_cancel"
        android:drawablePadding="16dp"
        android:background="@android:color/transparent"
        android:id="@+id/btnLeft"
        />
</android.support.v7.widget.CardView>
</RelativeLayout>
</FrameLayout>
