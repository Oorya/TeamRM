<com.teamrm.teamrm.Utility.RowSetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    tools:nContext="com.teamrm.teamrm.Fragment.AdminSettingsAdvanced"
    tools:paddingTop="25dp">

    <View style="@style/Separator4dp" />

    <com.teamrm.teamrm.Utility.RowViewLayout
        android:id="@+id/defineFirm"
        style="@style/PrefRowBig"
        android:background="@color/listRow_alt">

        <ImageView
            android:id="@+id/firmIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_logo_blue" />

        <TextView
            android:id="@+id/firmLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_toEndOf="@id/firmIcon"
            android:text="פרטים אישיים"
            android:textColor="@color/textColor_primary"
            android:textSize="18sp" />
    </com.teamrm.teamrm.Utility.RowViewLayout>

    <View style="@style/Separator4dp" />

    <com.teamrm.teamrm.Utility.RowViewLayout
        android:id="@+id/defineCompany"
        style="@style/PrefRowBig"
        android:background="@color/listRow_alt">

        <ImageView
            android:id="@+id/companyIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_icon_tech" />

        <TextView
            android:id="@+id/companyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_toEndOf="@id/companyIcon"
            android:text="יצירת חברה"
            android:textColor="@color/textColor_primary"
            android:textSize="18sp" />
    </com.teamrm.teamrm.Utility.RowViewLayout>

    <View style="@style/Separator4dp" />

    <com.teamrm.teamrm.Utility.RowViewLayout
        android:id="@+id/defineProducts"
        style="@style/PrefRowBig"
        android:background="@color/listRow_alt">

        <ImageView
            android:id="@+id/productIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_icon_product2" />

        <TextView
            android:id="@+id/productLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_toEndOf="@id/productIcon"
            android:text="התקשרות לחברה"
            android:textColor="@color/textColor_primary"
            android:textSize="18sp" />
    </com.teamrm.teamrm.Utility.RowViewLayout>

    <View style="@style/Separator4dp" />

    <com.teamrm.teamrm.Utility.RowViewLayout
        android:id="@+id/appPrefs"
        style="@style/PrefRowBig"
        android:background="@color/listRow_alt">

        <ImageView
            android:id="@+id/appPrefsIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_settings" />

        <TextView
            android:id="@+id/appPrefsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_toEndOf="@id/appPrefsIcon"
            android:text="תצורת האפליקציה"
            android:textColor="@color/textColor_primary"
            android:textSize="18sp" />

    </com.teamrm.teamrm.Utility.RowViewLayout>

    <View style="@style/Separator4dp" />

    <com.teamrm.teamrm.Utility.RowViewLayout
        android:id="@+id/contactUs"
        style="@style/PrefRowBig"
        android:background="@color/listRow_alt">

        <ImageView
            android:id="@+id/contactUsIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_icon_contact_us" />

        <TextView
            android:id="@+id/categoryALabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_toEndOf="@id/contactUsIcon"
            android:text="צור קשר"
            android:textColor="@color/textColor_primary"
            android:textSize="18sp" />

    </com.teamrm.teamrm.Utility.RowViewLayout>

    <View style="@style/Separator4dp" />

    <com.teamrm.teamrm.Utility.RowViewLayout
        android:id="@+id/shareApp"
        style="@style/PrefRowBig"
        android:background="@color/listRow_alt">

        <ImageView
            android:id="@+id/shareIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_icon_share" />

        <TextView
            android:id="@+id/shareLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_toEndOf="@id/shareIcon"
            android:text="שתף"
            android:textColor="@color/textColor_primary"
            android:textSize="18sp" />

    </com.teamrm.teamrm.Utility.RowViewLayout>

    <View style="@style/Separator4dp" />

    <com.teamrm.teamrm.Utility.RowViewLayout
        android:id="@+id/about"
        style="@style/PrefRowBig"
        android:background="@color/listRow_alt">

        <ImageView
            android:id="@+id/aboutIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_icon_about_outline" />

        <TextView
            android:id="@+id/aboutLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_toEndOf="@id/aboutIcon"
            android:text="אודות"
            android:textColor="@color/textColor_primary"
            android:textSize="18sp" />

    </com.teamrm.teamrm.Utility.RowViewLayout>

    <View style="@style/Separator4dp" />
</com.teamrm.teamrm.Utility.RowSetLayout>
