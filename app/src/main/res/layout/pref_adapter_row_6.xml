<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/prefRow"
    style="@style/CardRow"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:layoutDirection="rtl"
    android:minHeight="48dp"
    android:layout_margin="0dp"
    tools:layout_marginTop="25dp">


    <TextView
        android:id="@+id/prefText"
        style="@style/CardRowLabel"
        android:paddingBottom="4dp"
        android:paddingEnd="16dp"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:textSize="16sp"
        tools:text="גכע דגכע דגכ  דגכעדגכ גכע דגכ" />

    <ImageView
        android:id="@+id/prefIconRemove"
        style="@style/CardRowImageEnd"
        android:src="@drawable/ic_remove" />

    <ImageView
        android:id="@+id/prefIconEdit"
        style="@style/CardRowImageEnd"
        android:src="@drawable/ic_edit"
        android:layout_marginEnd="48dp"/>

    <View
        style="@style/Separator1px"
        android:layout_alignParentBottom="true"
        android:background="@color/app_bg"
        android:layout_height="2px"/>
</RelativeLayout>