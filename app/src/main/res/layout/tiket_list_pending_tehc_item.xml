<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/status"
                android:background="#ffa726">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/userIcon"
                    android:src="@drawable/ic_icon_alert2"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:layout_toEndOf="@id/userIcon"
                    android:text="קריאה ממתינה לצוות טכנאי"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/editIcon"
                    android:src="@drawable/ic_edit_24px_white"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ticketNum"
                    android:layout_marginTop="10dp"
                    android:text="A20160811"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="8dp"
                    android:layout_toStartOf="@id/editIcon"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/status"
                android:id="@+id/userName"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/personIcon"
                    android:src="@drawable/ic_icon_person"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:id="@+id/personName"
                    android:layout_toEndOf="@id/personIcon"
                    android:text=" קריבורוז'סקי"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/tech"
                    android:src="@drawable/ic_edit_24px_white"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="אין טכנאי מצוות"
                    android:layout_marginLeft="8dp"
                    android:layout_toStartOf="@id/tech"/>

                <View android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_below="@id/tech"
                    android:layout_marginRight="9dp"
                    android:layout_marginLeft="9dp"
                    android:background="#b3e5fc" />
            </RelativeLayout>
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/userName"
                android:id="@+id/tipe"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="16dp"
                    android:textAlignment="center"
                    android:text="מחשב תמיכה במישרד"
                    android:id="@+id/equipment"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="|"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:id="@+id/hozez"
                    android:layout_toEndOf="@id/equipment"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="תקלת חומרה"
                    android:layout_marginLeft="4dp"
                    android:id="@+id/Type"
                    android:layout_toEndOf="@id/hozez"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="|"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:id="@+id/hozez2"
                    android:layout_toEndOf="@id/Type"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="תקלה משביתה"
                    android:layout_marginLeft="4dp"
                    android:id="@+id/Type2"
                    android:layout_toEndOf="@id/hozez2"/>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tipe"
                android:id="@+id/area"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="16dp"
                    android:textAlignment="center"
                    android:text="גוש דן"
                    android:id="@+id/eriaZon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="|"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:id="@+id/br"
                    android:layout_toEndOf="@id/eriaZon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="תקלת חומרה"
                    android:layout_marginLeft="4dp"
                    android:id="@+id/add"
                    android:layout_toEndOf="@id/br"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/area"
                android:id="@+id/Description"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="16dp"
                    android:textAlignment="center"
                    android:text="תקלה במחשב"
                    android:id="@+id/DescriptionTitel"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="|"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:id="@+id/br1"
                    android:layout_toEndOf="@id/DescriptionTitel"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="אתמול נפל המחשב מהחלון היום לא נדלק"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:id="@+id/DescriptionTxt"
                    android:layout_toEndOf="@id/br1"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Description"
                android:id="@+id/date"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="16dp"
                    android:textAlignment="center"
                    android:text="פתיחה"
                    android:id="@+id/openDate"/>

            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>