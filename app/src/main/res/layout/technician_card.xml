<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:paddingTop="25dp">

    <android.support.v7.widget.CardView
        android:id="@+id/userDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:layoutDirection="rtl"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <RelativeLayout
                android:id="@+id/name"
                style="@style/CardRow">

                <ImageView
                    android:id="@+id/technicianIcon"
                    style="@style/CardRowImageStart"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_icon_tech" />

                <TextView
                    android:id="@+id/userNameCard"
                    style="@style/CardRowText"
                    android:layout_toEndOf="@id/technicianIcon"
                    android:text="טכנאי מוסמך"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/expandButton"
                    style="@style/CardRowImageEnd"
                    android:src="@drawable/ic_icon_down" />
            </RelativeLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>