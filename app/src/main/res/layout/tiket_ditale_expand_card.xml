<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layoutDirection="rtl"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:onClick="expand"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/line1"
                android:onClick="expand">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/userIcon"
                    android:src="@drawable/ic_icon_ticket"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="פרטי קריאה"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/userIcon"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/expandButton"
                    android:src="@drawable/ic_icon_down"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/line2"
                android:layout_below="@id/line1">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/productIcon"
                    android:src="@drawable/ic_icon_product2"
                    />
                <TextView
                    android:layout_width="42dp"
                    android:layout_height="wrap_content"
                    android:text="מוצר"
                    android:layout_marginTop="10dp"
                    android:id="@+id/productIconTxt"
                    android:layout_toEndOf="@id/productIcon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="מוצר"
                    android:layout_toEndOf="@id/productIconTxt"
                    android:layout_marginTop="10dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/productButton"
                    android:src="@drawable/ic_icon_loupe"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/line3"
                android:layout_below="@id/line2">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/ClassificationIcon"
                    android:src="@drawable/ic_icon_product2"
                    />
                <TextView
                    android:layout_width="42dp"
                    android:layout_height="wrap_content"
                    android:text="מוצר"
                    android:layout_marginTop="10dp"
                    android:id="@+id/ClassificationTxt1"
                    android:layout_toEndOf="@id/ClassificationIcon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="מוצר"
                    android:layout_toEndOf="@id/ClassificationTxt1"
                    android:layout_marginTop="10dp"
                    android:id="@+id/ClassificationTxt2"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:layout_toEndOf="@id/ClassificationTxt2"
                    android:layout_marginTop="10dp"
                    android:id="@+id/ClassificationTxt3"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="מוצר"
                    android:layout_toEndOf="@id/ClassificationTxt3"
                    android:layout_marginTop="10dp"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/line4"
                android:layout_below="@id/line3">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/areaIcon"
                    android:src="@drawable/ic_icon_ezor"
                    />
                <TextView
                    android:layout_width="42dp"
                    android:layout_height="wrap_content"
                    android:text="אזור"
                    android:layout_marginTop="10dp"
                    android:id="@+id/areaTxt1"
                    android:layout_toEndOf="@id/areaIcon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="גוש דן"
                    android:layout_toEndOf="@id/areaTxt1"
                    android:layout_marginTop="10dp"
                    android:id="@+id/areaTxt2"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/line5"
                android:layout_below="@id/line4">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/addIcon"
                    android:src="@drawable/ic_icon_location"
                    />
                <TextView
                    android:layout_width="42dp"
                    android:layout_height="wrap_content"
                    android:text="כתובת"
                    android:layout_marginTop="10dp"
                    android:id="@+id/addTxt"
                    android:layout_toEndOf="@id/addIcon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="בלה בלה בלה"
                    android:layout_toEndOf="@id/addTxt"
                    android:layout_marginTop="10dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/addButton"
                    android:src="@drawable/ic_icon_nav"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/line6"
                android:layout_below="@id/line5">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/phoneIcon"
                    android:src="@drawable/ic_icon_phone"
                    />
                <TextView
                    android:layout_width="42dp"
                    android:layout_height="wrap_content"
                    android:text="טלפון"
                    android:layout_marginTop="10dp"
                    android:id="@+id/phoneTxt1"
                    android:layout_toEndOf="@id/phoneIcon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="מוצר"
                    android:layout_toEndOf="@id/phoneTxt1"
                    android:layout_marginTop="10dp"
                    android:id="@+id/phoneTxt2"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:layout_toEndOf="@id/phoneTxt2"
                    android:layout_marginTop="10dp"
                    android:id="@+id/phoneTxt3"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="מוצר"
                    android:layout_toEndOf="@id/phoneTxt3"
                    android:layout_marginTop="10dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/line7"
                android:layout_below="@id/line6">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/noteIcon"
                    android:src="@drawable/ic_icon_note"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="תוכן הקריאה"
                    android:layout_marginTop="10dp"
                    android:id="@+id/noteTxt1"
                    android:layout_toEndOf="@id/noteIcon"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" 
                    android:layout_below="@id/noteTxt1"
                    android:layout_marginRight="42dp"
                    android:hint="פרות התקלה"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/line8"
                android:layout_below="@id/line7">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/cameraIcon"
                    android:src="@drawable/ic_icon_camera"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="צילומים"
                    android:layout_marginTop="10dp"
                    android:id="@+id/cameraTxt1"
                    android:layout_toEndOf="@id/cameraIcon"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img1"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img2"
                    android:layout_toEndOf="@id/img1"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>