<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    tools:nContext="com.teamrm.teamrm.Fragment.TicketView"
    tools:paddingTop="25dp">


    <com.teamrm.teamrm.Utility.RowSetLayout
        android:id="@+id/ticketMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.teamrm.teamrm.Utility.RowViewLayout
            android:id="@+id/had"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/title">

            <TextView
                android:id="@+id/ticketNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="9dp"
                android:text="קריאה A20160811"
                android:textAlignment="center"
                android:textColor="@android:color/white" />
        </com.teamrm.teamrm.Utility.RowViewLayout>

        <com.teamrm.teamrm.Utility.RowViewLayout
            android:id="@+id/userStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff7043"
            android:gravity="start"
            android:layoutDirection="rtl">

            <ImageView
                android:id="@+id/alert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/ic_icon_alert2" />

            <TextView
                android:id="@+id/ticketStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@id/alert"
                android:text="קריאה ממתינה לאישור פתיחה"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

        </com.teamrm.teamrm.Utility.RowViewLayout>

        <com.teamrm.teamrm.Utility.RowViewLayout
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/userStatus"
            android:background="#f7f7f7">

            <ImageView
                android:id="@+id/clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_icon_clock" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/clock"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dateTimeOpen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="6dp"
                    android:layout_weight="1"
                    android:text="פתיחה"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/buffer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:text="|"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/dateTimeChange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_weight="1"
                    android:text="קבע מועד טיפול "
                    android:textAlignment="center"

                    />
            </LinearLayout>
        </com.teamrm.teamrm.Utility.RowViewLayout>


        <com.teamrm.teamrm.Utility.RowViewLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/card_userDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <include
                            android:id="@+id/userDetails"
                            layout="@layout/user_detail_card" />

                        <include
                            android:id="@+id/userDetailsOpen"
                            layout="@layout/user_detail_expand_card"

                            android:visibility="gone" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/card_userDetails"
                        >

                        <include
                            android:id="@+id/ticketDetails"
                            layout="@layout/ticket_detail_card"

                            />


                        <include
                            android:id="@+id/ticketDetailsOpen"
                            layout="@layout/ticket_detail_expand_card"
                            android:visibility="gone" />
                    </RelativeLayout>

                </RelativeLayout>
            </ScrollView>
            <View
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:background="@drawable/shadow_linear"/>
        </com.teamrm.teamrm.Utility.RowViewLayout>

    </com.teamrm.teamrm.Utility.RowSetLayout>

    <com.teamrm.teamrm.Utility.RowViewLayout
        android:layout_alignBottom="@id/ticketMain"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/ticketActions"
        android:padding="4dp"
        android:elevation="10dp"
        >

        <include layout="@layout/fragment_state_action_buttons"
            />
    </com.teamrm.teamrm.Utility.RowViewLayout>

</RelativeLayout>
