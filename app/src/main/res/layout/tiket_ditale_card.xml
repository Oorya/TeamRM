<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layoutDirection="rtl"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:onClick="expand"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/line1"
            android:onClick="expand">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="15dp"
                android:id="@+id/userIcon"
                android:src="@drawable/ic_icon_ticket"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="פרטי קריאה"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/userIcon"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:id="@+id/expandButton"
                android:src="@drawable/ic_icon_down"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/line2"
            android:layout_below="@id/line1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="15dp"
                android:id="@+id/productIcon"
                android:src="@drawable/ic_icon_product2"
                />
            <TextView
                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:text="מוצר"
                android:layout_marginTop="10dp"
                android:id="@+id/productIconTxt"
                android:layout_toEndOf="@id/productIcon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="מוצר"
                android:layout_toEndOf="@id/productIconTxt"
                android:layout_marginTop="10dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:id="@+id/productButton"
                android:src="@drawable/ic_icon_loupe"
                />
        </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/line3"
                android:layout_below="@id/line2">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/ClassificationIcon"
                    android:src="@drawable/ic_icon_product2"
                    />
                <TextView
                    android:layout_width="42dp"
                    android:layout_height="wrap_content"
                    android:text="מוצר"
                    android:layout_marginTop="10dp"
                    android:id="@+id/ClassificationTxt1"
                    android:layout_toEndOf="@id/ClassificationIcon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="מוצר"
                    android:layout_toEndOf="@id/ClassificationTxt1"
                    android:layout_marginTop="10dp"
                    android:id="@+id/ClassificationTxt2"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:layout_toEndOf="@id/ClassificationTxt2"
                    android:layout_marginTop="10dp"
                    android:id="@+id/ClassificationTxt3"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="מוצר"
                    android:layout_toEndOf="@id/ClassificationTxt3"
                    android:layout_marginTop="10dp"
                    />
                
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/line4"
                android:layout_below="@id/line3">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/areaIcon"
                    android:src="@drawable/ic_icon_ezor"
                    />
                <TextView
                    android:layout_width="42dp"
                    android:layout_height="wrap_content"
                    android:text="אזור"
                    android:layout_marginTop="10dp"
                    android:id="@+id/areaTxt1"
                    android:layout_toEndOf="@id/areaIcon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="גוש דן"
                    android:layout_toEndOf="@id/areaTxt1"
                    android:layout_marginTop="10dp"
                    android:id="@+id/areaTxt2"
                    />

            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    
</RelativeLayout>